                <block class="Lof\Faq\Block\Toolbar" name="faq_toolbar" template="Lof_Faq::toolbar.phtml">
                    <block class="Magento\Theme\Block\Html\Pager" name="faq_toolbar_pager"/>
                </block>
            </block>
        </referenceBlock>
    </body>
</page>
