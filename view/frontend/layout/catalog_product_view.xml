<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="product.info.details">
            <block class="Lof\Faq\Block\Product\View\Faq" name="product.info.faq" template="Lof_Faq::product/faq.phtml" group="detailed_info" cacheable="false">
                <arguments><argument translate="true" name="title" xsi:type="string">FAQ</argument></arguments>
                <block class="Lof\Faq\Block\Toolbar" name="faq_toolbar" template="Lof_Faq::toolbar.phtml">
                    <block class="Magento\Theme\Block\Html\Pager" name="faq_toolbar_pager"/>
                </block>
            </block>
        </referenceBlock>
    </body>
</page>
